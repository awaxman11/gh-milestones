<div class="homepage">

<% if warden.authenticated? %>
  <a class="logout-button <%= warden.authenticated? ? "logged-in" : "logged-out" %>" href="/logout">Logout</a>
<% end %>


<div class="homepage-container">

  <div class="ui center aligned icon header">
    <i class="github icon"></i>
  </div>

  <h2 class="ui center aligned header"><%= warden.authenticated? ? "It's Triaging Time!" : "Milestone Dashboard" %></h2>

    <div class="login-container ui center aligned icon header">
      <% if warden.authenticated? %>
          <a href="/triage/all-issues" class="ui large primary button">All issues</a>
          <a href="/triage/stale-issues" class="ui large primary button">7+ days since last updated</a>
      <% else %>
        <a href="/login" class="large ui primary button">Login</a>
      <% end %>
    </div>

</div>

</div>
