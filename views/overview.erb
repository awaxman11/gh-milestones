<script type="text/javascript">

$.ajax('overview_stats.json', {
  success: function(response) {
    response_keys = Object.keys(response)
    console.log(response_keys)

    _.each($('.statistic.segment'), function(value){
      stat = $(value).data('stat')
      
      if (_.contains(response_keys, stat)){
        $("a[data-stat='"+stat+"']").children('.value').html(response[stat].count)
        $("a[data-stat='"+stat+"']").children('.label').html(response[stat].label)
        $("a[data-stat='"+stat+"']").attr('href', response[stat].link)
      }
    });
    $('div.active.dimmer').fadeOut(400);
    $('.overview').fadeIn(1000);
  },
  error: function(response) {
    console.log("Error :(")
  }
});




</script>